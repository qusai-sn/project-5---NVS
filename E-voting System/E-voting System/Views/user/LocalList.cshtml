@model E_voting_System.Models.LocalListViewModel

@{
    ViewBag.Title = "القائمة المحلية";
}

<!DOCTYPE html>
<html lang="ar">
<head>
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        .card {
            cursor: pointer;
            transition: transform 0.3s, box-shadow 0.3s;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

            .card:hover {
                transform: scale(1.05);
                box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
            }

        .card-body {
            text-align: center;
            padding: 1.5rem;
        }

        .form-check-input {
            margin-top: 0.3em;
        }

        .list-group-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .btn-primary {
            border-radius: 5px;
        }

        h2 {
            font-size: 1.75rem;
            font-weight: 700;
            margin-bottom: 1.5rem;
            color: #333;
            text-align: center;
        }

        .form-group {
            text-align: center;
        }

        .container {
            max-width: 900px;
            margin: 2rem auto; /* Space below navbar */
        }

        body, h1, h2, h3, h4, h5, h6 {
            font-family: 'Cairo', sans-serif;
        }

        .line {
            border-bottom: 3px solid red;
            margin-top: 3px;
            width: 70%;
        }

        .line2 {
            border-bottom: 3px solid darkgreen;
            margin-top: 3px;
            width: 60%;
        }
    </style>
</head>
<body>
    <div class="container">
        <center>
            <h2>التصويت للقوائم المحلية</h2><center><div class="line2"></div><div class="line"></div></center>
        </center><br /><br />
        @using (Html.BeginForm("LocalList", "user", FormMethod.Post, new { id = "localListForm" }))
        {
            @Html.AntiForgeryToken()

            <div class="row">
                @foreach (var list in Model.LocalLists)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title">@list.list_Name</h5>
                                @*<img src="@list.List_Logo" alt="شعار @list.list_Name" class="img-fluid my-3" />*@
                                <div class="form-check text-center">
                                    <input class="form-check-input list-radio" type="radio" name="SelectedListId" id="list_@list.ID" value="@list.ID" />
                                    <label class="form-check-label" for="list_@list.ID">
                                        اختر
                                    </label>
                                </div>
                            </div>
                            <div class="card-footer">
                                <h6>المرشحون</h6>
                                <ul class="list-group list-group-flush">
                                    @foreach (var candidate in Model.CandidatesByList[list.ID])
                                    {
                                        <li class="list-group-item">
                                            <div class="form-check">
                                                <input class="form-check-input candidate-checkbox" type="checkbox" name="SelectedCandidateIds" id="candidate_@candidate.CandidateId" value="@candidate.CandidateId" data-list-id="@list.ID" disabled />
                                                <label class="form-check-label" for="candidate_@candidate.CandidateId">
                                                    @candidate.Candidate_Name (@candidate.Type_Of_Chair)
                                                </label>
                                            </div>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="form-group mt-4">
                <input type="button" id="submitVote" value="تصويت" style="background-color:#e64141; color: white; padding:15px;" />
            </div>
        }
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var listRadios = document.querySelectorAll('.list-radio');
            var candidateCheckboxes = document.querySelectorAll('.candidate-checkbox');

            listRadios.forEach(function (radio) {
                radio.addEventListener('change', function () {
                    var selectedListId = this.value;

                    candidateCheckboxes.forEach(function (checkbox) {
                        if (checkbox.getAttribute('data-list-id') === selectedListId) {
                            checkbox.disabled = false;
                        } else {
                            checkbox.disabled = true;
                            checkbox.checked = false; // Uncheck the checkbox if it's disabled
                        }
                    });
                });
            });

            document.getElementById('submitVote').addEventListener('click', function () {
                var selectedList = document.querySelector('input[name="SelectedListId"]:checked');
                if (!selectedList) {
                    Swal.fire({
                        title: 'سيُحتسب صوتك كورقة بيضاء',
                        text: "الورقة البيضاء تعني أنك لم تصوّت لأي قائمة, هل تود إكمال عملية التصويت؟",
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonText: 'نعم, تصويت',
                        cancelButtonText: 'إلغاء'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            document.getElementById('localListForm').submit();
                        }
                    });
                } else {
                    document.getElementById('localListForm').submit();
                }
            });
        });
    </script>
</body>
</html>
