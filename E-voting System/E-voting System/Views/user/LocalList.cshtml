@model E_voting_System.Models.LocalListViewModel

@{
    ViewBag.Title = "القائمة المحلية";
}

<!DOCTYPE html>
<html lang="ar">
<head>
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        .hero-image {
            width: 100%;
            height: 300px;
            background-image: url('https://www.flydubai.com/ar/media/Amman-1920x720_tcm9-6448.jpg');
            background-size: cover;
            background-position: center;
            margin-bottom: 20px;
            border-radius: 10px;
        }

        /* Reducing the navbar height */
        .navbar {
            padding-top: 0.2rem;
            padding-bottom: 0.2rem;
        }

        .navbar-nav .nav-link {
            padding-left: 0.5rem;
            padding-right: 0.5rem;
        }

        .card {
            cursor: pointer;
            transition: transform 0.3s, box-shadow 0.3s;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

            .card:hover {
                transform: scale(1.05);
                box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
            }

        .card-body {
            text-align: center;
            padding: 1.5rem;
        }

        .form-check-input {
            margin-top: 0.3em;
        }

        .list-group-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .btn-primary {
            border-radius: 5px;
        }

        h2 {
            font-size: 1.75rem;
            font-weight: 700;
            margin-bottom: 1.5rem;
            color: #333;
            text-align: center;
        }

        .form-group {
            text-align: center;
        }

        .container-1 {
            max-width: 1200px;
            margin: 2rem auto;
            min-height: calc(100vh - 500px); /* Adjusting height considering the image height */
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }
    </style>
</head>
<body>
    <div class="hero-image"></div>

    <div class="container-1">
        <h2 class="text-center my-4">القوائم المحلية</h2>

        @using (Html.BeginForm("LocalList", "user", FormMethod.Post, new { id = "localListForm" }))
        {
            @Html.AntiForgeryToken()

            <div class="row">
                @foreach (var list in Model.LocalLists)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title">@list.list_Name</h5>
                                @*<img src="@list.List_Logo" alt="شعار @list.list_Name" class="img-fluid my-3" />*@
                                <div class="form-check text-center">
                                    <input class="form-check-input list-radio" type="radio" name="SelectedListId" id="list_@list.ID" value="@list.ID" />
                                    <label class="form-check-label" for="list_@list.ID">
                                        اختر
                                    </label>
                                </div>
                            </div>
                            <div class="card-footer">
                                <h6>المرشحون</h6>
                                <ul class="list-group list-group-flush">
                                    @foreach (var candidate in Model.CandidatesByList[list.ID])
                                    {
                                        <li class="list-group-item">
                                            <div class="form-check">
                                                <input class="form-check-input candidate-checkbox" type="checkbox" name="SelectedCandidateIds" id="candidate_@candidate.CandidateId" value="@candidate.CandidateId" data-list-id="@list.ID" disabled />
                                                <label class="form-check-label" for="candidate_@candidate.CandidateId">
                                                    @candidate.Candidate_Name (@candidate.Type_Of_Chair)
                                                </label>
                                            </div>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="form-group mt-4">
                <input type="button" id="submitVote" value="تصويت" class="btn btn-primary" />
            </div>
        }
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var listRadios = document.querySelectorAll('.list-radio');
            var candidateCheckboxes = document.querySelectorAll('.candidate-checkbox');

            listRadios.forEach(function (radio) {
                radio.addEventListener('change', function () {
                    var selectedListId = this.value;

                    candidateCheckboxes.forEach(function (checkbox) {
                        if (checkbox.getAttribute('data-list-id') === selectedListId) {
                            checkbox.disabled = false;
                        } else {
                            checkbox.disabled = true;
                            checkbox.checked = false; // Uncheck the checkbox if it's disabled
                        }
                    });
                });
            });

            document.getElementById('submitVote').addEventListener('click', function () {
                var selectedList = document.querySelector('input[name="SelectedListId"]:checked');
                if (!selectedList) {
                    Swal.fire({
                        title: 'تأكيد التصويت الأبيض',
                        text: "أنت على وشك إرسال تصويت أبيض. هل تريد المتابعة؟",
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonText: 'نعم، أرسل',
                        cancelButtonText: 'لا، إلغاء'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            document.getElementById('localListForm').submit();
                        }
                    });
                } else {
                    document.getElementById('localListForm').submit();
                }
            });
        });
    </script>
</body>
</html>
