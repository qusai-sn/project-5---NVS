@{
    ViewBag.Title = "Login with Password";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card shadow-lg" style="width: 40%; border-radius: 10px;">
        <div class="card-body">
            @using (Html.BeginForm("LoginWithPassword", "user", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h5 class="card-title text-center">Enter your details</h5>
                    <hr />

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group mb-3">
                        <label for="National_ID" class="form-label">National ID</label>
                        <input type="text" id="National_ID" name="National_ID" class="form-control" value="@ViewBag.NationalId" />
                        <span class="text-danger">@ViewBag.NationalIdError</span>
                    </div>

                    <div class="form-group mb-3">
                        <label for="Password" class="form-label">Password</label>
                        <input type="password" id="Password" name="Password" class="form-control" />
                        <span class="text-danger">@ViewBag.PasswordError</span>
                    </div>

                    <div class="form-group text-center">
                        <input type="submit" value="Login" class="btn btn-primary" />
                    </div>

                    <span class="text-danger font-weight-bold d-block text-center mt-3">@ViewBag.auth</span>
                </div>
            }
        </div>
    </div>
</div>

<div class="text-center mt-3">
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
</div>
