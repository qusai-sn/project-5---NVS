@model E_voting_System.Models.CirclesViewModel

@{
    ViewBag.Title = "الدوائر الانتخابية";
    var circleTitles = new Dictionary<int, string>
{
        { 1, "دائرة اربد الاولى" },
        { 2, "دائرة اربد الثانية" },
        { 3, "دائرة جرش" },
        { 4, "دائرة عجلون" }
    };

    var circleImages = new Dictionary<int, string>
{
        { 1, "~/Content/assets/images/irbidOne.jpg" }, // Replace with actual image paths
        { 2, "~/Content/assets/images/irbidTwo.jpg" },
        { 3, "~/Content/assets/images/jarash.jpg" },
        { 4, "~/Content/assets/images/ajloon.jpg" }
    };
}

<!DOCTYPE html>
<html lang="ar">
<head>
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        .active-circle {
            border: 2px solid green;
            pointer-events: auto;
            background-color: #e9f7ef;
            transition: transform 0.3s, box-shadow 0.3s;
        }

        .inactive-circle {
            border: 1px solid gray;
            pointer-events: none;
            opacity: 0.5;
            background-color: #f8f9fa;
        }

        .card {
            text-align: center;
            cursor: pointer;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin: 0 auto;
            width: 900px; /* Fixed width for cards */
            height: auto;
        }

        .card-title {
            font-size: 1.25rem;
            font-weight: 600;
        }

        .container {
            max-width: 900px;
            margin: auto;
            margin-top: 2rem; /* Add margin-top for space below navbar */
        }

        .title {
            font-size: 1.5rem;
            font-weight: 700;
            margin-bottom: 1rem;
            color: #333;
            text-align: center;
        }

        .card img {
            max-width: 100%; /* Make the image fill the card width */
            height: auto;
            margin-bottom: 10px; /* Add some space below the image */
            border-radius: 10px;
        }
    </style>
</head>
<body>
    <div class="d-flex justify-content-center align-items-center" style="min-height: 100vh;">
        <div class="container">
            <h2 class="title">الدوائر الانتخابية</h2>
            <div class="card shadow-lg p-4 p-lg-5" style="border-radius: 10px;">
                <div class="card-body">
                    <div class="row">
                        @foreach (var circle in Model.Circles)
                        {
                            var isActive = circle == Model.ActiveCircleId;
                            var title = circleTitles.ContainsKey(circle) ? circleTitles[circle] : $"الدائرة {circle}";
                            var imageUrl = circleImages.ContainsKey(circle) ? circleImages[circle] : "~/Content/assets/images/default.jpg"; // Default image if not found
                            <div class="col-md-6 mb-4 d-flex justify-content-center">
                                <div class="card @(isActive ? "active-circle" : "inactive-circle")">
                                    <div class="card-body">
                                        <img src="@Url.Content(imageUrl)" alt="@title" />
                                        <h5 class="card-title">@title</h5>
                                        @if (isActive)
                                        {
                                            <a href="@Url.Action("LocalList", "user", new { circleId = circle })" class="btn btn-primary">اذهب إلى القائمة المحلية</a>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
