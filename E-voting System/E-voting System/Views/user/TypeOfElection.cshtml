@{ ViewBag.Title = "نوع الانتخابات";
    string localListAction = ViewBag.localList_actionName as string;
    string partyListAction = ViewBag.PartyList_actionName as string;
    int circle_id = ViewBag.circle;

    bool isLocalActive = localListAction != null;
    bool isPartyActive = partyListAction != null;
    bool areBothInactive = !isLocalActive && !isPartyActive;
}

<!DOCTYPE html>
<html lang="ar">
<head>
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        .active-card {
            border: 2px solid green;
            pointer-events: auto;
            background-color: #e9f7ef;
            transition: transform 0.3s, box-shadow 0.3s;
        }

        .inactive-card {
            border: 1px solid gray;
            pointer-events: none;
            opacity: 0.5;
            background-color: #f8f9fa;
        }

        .card {
            text-align: center;
            cursor: pointer;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

            .card a {
                color: inherit;
                text-decoration: none;
            }

        .card-title {
            font-size: 1.25rem;
            font-weight: 600;
        }

        .card-text {
            font-size: 1rem;
            color: #555;
        }

        /* Add this style to control image size */
        .card img {
            max-width: 250px; /* Adjust the width as needed */
            height: auto;
        }

        body, h2 {
            font-family: 'Cairo', sans-serif;
        }

        .line {
            border-bottom: 3px solid red;
            margin-top: 3px;
            width: 70%;
        }

        .line2 {
            border-bottom: 3px solid darkgreen;
            margin-top: 3px;
            width: 60%;
        }
    </style>
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body, h1 {
            font-family: 'Cairo', sans-serif;
        }
    </style>
</head>
<body>
    <div class="d-flex justify-content-center align-items-center" style="min-height: 100vh;">
        <div class="container">
            <div class="card shadow-lg p-4 p-lg-5" style="border-radius: 10px;">
                <div class="card-body">
                    <h1>نوع الانتخابات</h1><center><div class="line2"></div><div class="line"></div></center> <br /> <br />                  <div class="row">
                        <div class="col-md-6 mb-4">
                            @if (isLocalActive)
                            {
                                <a href="@Url.Action("circles", "user", new {circleId = circle_id} )" class="card active-card">
                                    <div class="card-body">
                                        <!-- Add the image here -->
                                        <img src="~/Content/assets/images/local.jpg" alt="Local Election" class="img-fluid mb-3" />
                                        <h5 class="card-title" style=" font-family: 'Cairo', sans-serif;">الانتخابات المحلية</h5>
                                        <p class="card-text">صوت لممثليك المحليين</p>
                                    </div>
                                </a>
                            }
                            else
                            {
                                <div class="card inactive-card">
                                    <div class="card-body">
                                        <!-- Add the image here -->
                                        <img src="~/Content/assets/images/local.jpg" alt="Local Election" class="img-fluid mb-3" />
                                        <h5 class="card-title" style=" font-family: 'Cairo', sans-serif;">الانتخابات المحلية</h5>
                                        <p class="card-text">صوت لممثليك المحليين</p>
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="col-md-6 mb-4">
                            @if (isPartyActive)
                            {
                                <a href="@Url.Action(partyListAction, "user")" class="card active-card">
                                    <div class="card-body">
                                        <!-- Add the image here -->
                                        <img src="~/Content/assets/images/party.jpg" alt="Party Election" class="img-fluid mb-3" />
                                        <h5 class="card-title" style=" font-family: 'Cairo', sans-serif;">الانتخابات الحزبية</h5>
                                        <p class="card-text">صوت لممثلي حزبك</p>
                                    </div>
                                </a>
                            }
                            else
                            {
                                <div class="card inactive-card">
                                    <div class="card-body">
                                        <!-- Add the image here -->
                                        <img src="~/Content/assets/images/party.jpg" alt="Party Election" class="img-fluid mb-3" />
                                        <h5 class="card-title" style=" font-family: 'Cairo', sans-serif;">الانتخابات الحزبية</h5>
                                        <p class="card-text">صوت لممثلي حزبك</p>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var areBothInactive = @areBothInactive.ToString().ToLower();
            if (areBothInactive) {
                Swal.fire({
                    title: 'عملية التصويت مكتملة',
                    text: 'لقد أكملت عملية التصويت الخاصة بك بالفعل. شُكرًا لك!',
                    icon: 'info',
                    confirmButtonText: 'موافق'
                });
            }
        });
    </script>
</body>
</html>