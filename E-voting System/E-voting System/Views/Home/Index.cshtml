@{
    ViewBag.Title = "Election Schedule";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

    var dateNOW = DateTime.Now;
    var Dates = Session["electionDates"] as E_voting_System.Models.ElectionSchedule;

    var startDateOfElection = Dates?.Start_Date_Of_Election;
    var endDateOfElection = Dates?.End_Date_Of_Election;

    var electionStartDateStr = startDateOfElection.HasValue
        ? startDateOfElection.Value.ToString("yyyy-MM-ddTHH:mm:ss")
        : "1970-01-01T00:00:00";
}




<script>
    document.addEventListener('DOMContentLoaded', function () {
        function startCountdown(elementId, startDateStr) {
            const countdownElement = document.getElementById(elementId);
            const targetDate = new Date(startDateStr).getTime();

            function updateCountdown() {
                const now = new Date().getTime();
                const timeRemaining = targetDate - now;

                if (timeRemaining < 0) {
                    countdownElement.innerHTML = "<div class='countdown-card'>انتهى الوقت!</div>";
                    return;
                }

                const days = Math.floor(timeRemaining / (1000 * 60 * 60 * 24));
                const hours = Math.floor((timeRemaining % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                const minutes = Math.floor((timeRemaining % (1000 * 60 * 60)) / (1000 * 60));
                const seconds = Math.floor((timeRemaining % (1000 * 60)) / 1000);

                countdownElement.innerHTML = `
                    <div class='countdown-card'><span>${days}</span><label>أيام</label></div>
                    <div class='countdown-card'><span>${hours}</span><label>ساعات</label></div>
                    <div class='countdown-card'><span>${minutes}</span><label>دقائق</label></div>
                    <div class='countdown-card'><span>${seconds}</span><label>ثواني</label></div>
                `;
            }

            // Initial call
            updateCountdown();
            // Update countdown every second
            setInterval(updateCountdown, 1000);
        }

        // Pass the start date string to the countdown function
        const electionStartDateStr = '@electionStartDateStr';
        startCountdown('election-timer', electionStartDateStr);
    });
</script>
