@model IEnumerable<E_voting_System.Models.ElectionSchedule>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

    ViewBag.Title = "Lists Of Dates";
   
}

<link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;700&display=swap" rel="stylesheet">

<style>
    body {
        font-family: 'Cairo', sans-serif;
    }

    .container {
        margin-top: 20px;
    }

    .card {
        border-radius: 0.5rem;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
        margin-bottom: 1rem;
    }

    .card-header {
        background-color: #002d72;
        color: white;
        font-weight: bold;
        padding: 10px 20px;
        border-radius: 0.5rem 0.5rem 0 0;
    }

    .card-body {
        padding: 20px;
    }

    .card-title {
        font-size: 1.25rem;
        margin-bottom: 0.75rem;
    }

    .card-text {
        font-size: 1rem;
        margin-bottom: 1rem;
    }

    .btn-primary {
        background-color: #002d72;
        border-color: #002d72;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #001a4e;
            border-color: #001a4e;
        }
</style>

<div class="container">
    <!-- Second Card: Election Dates -->
    <div class="card">
        <div class="card-header">
            Election Dates
        </div>
        <div class="card-body">
            @foreach (var item in Model)
            {
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Election ID: @item.ID</h5>
                        <p class="card-text">
                            <strong>Start Date of Election:</strong> @item.Start_Date_Of_Election<br />
                            <strong>End Date of Election:</strong> @item.End_Date_Of_Election
                        </p>
                        <a href="@Url.Action("EditDates", new { id = item.ID })" class="btn btn-primary">Edit</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
