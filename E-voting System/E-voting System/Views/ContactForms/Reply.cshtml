@{
    ViewBag.Title = "Send Email";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;700&display=swap" rel="stylesheet">
<style>
    body {
        font-family: 'Cairo', sans-serif;
    }
</style>
@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">
        <strong>Error:</strong> @ViewBag.Error
    </div>
}

<form method="post" action="@Url.Action("SendReply", "ContactForms")">
    @Html.AntiForgeryToken()

    <input type="hidden" name="ID" value="@ViewBag.ID" />

    <div class="container p-4 border rounded bg-light">
        <div class="mb-3">
            <label for="subject" class="form-label">Title</label>
            <input class="form-control" type="text" name="subject" id="subject" placeholder="Enter email title" required />
        </div>

        <div class="mb-4">
            <label for="message" class="form-label">Content</label>
            <textarea class="form-control" name="message" id="message" rows="6" placeholder="Enter your message" required></textarea>
        </div>

        <div class="d-flex justify-content-end">
            <input class="btn btn-primary px-4" type="submit" value="Send" />
        </div>
    </div>
</form>