
@model E_voting_System.Models.ElectionSchedule

@{
    ViewBag.Title = "Edit Election Schedule";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

}
<link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;700&display=swap" rel="stylesheet">
<style>
    body {
        font-family: 'Cairo', sans-serif;
    }
</style>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f7f7f7;
        }

        .form-container {
            max-width: 900px;
            margin: 50px auto;
        }

        .card {
            margin-bottom: 20px;
        }

        .card-header {
            font-size: 20px;
            font-weight: bold;
            background-color: #007bff;
            color: #ffffff;
        }

        .form-group label {
            font-weight: bold;
        }

        .btn-primary {
            width: 100%;
            margin-top: 20px;
        }

        .back-link {
            display: block;
            margin-top: 20px;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="form-container">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ID)

            <!-- Nomination Schedule Card -->
            <div class="card">
                <div class="card-header">
                    Nomination Schedule
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <h3>Start Date Of Nominate</h3>
                        @Html.EditorFor(model => model.Start_Date_Of_Nominate, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Start_Date_Of_Nominate, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">

                        <h3>Start Hour Of Nominate</h3>

                        @Html.EditorFor(model => model.Start_Hour_Of_Nominate, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Start_Hour_Of_Nominate, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <h3>End Date Of Nominate</h3>
                        @Html.EditorFor(model => model.End_Date_Of_Nominate, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.End_Date_Of_Nominate, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <h3>End Hour Of Nominate</h3>
                        @Html.EditorFor(model => model.End_Hour_Of_Nominate, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.End_Hour_Of_Nominate, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <!-- Election Schedule Card -->
            <div class="card">
                <div class="card-header">
                    Election Schedule
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <h3>Start Date Of Election</h3>
                        @Html.EditorFor(model => model.Start_Date_Of_Election, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Start_Date_Of_Election, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <h3>Start Hour Of Election</h3>
                        @Html.EditorFor(model => model.Start_Hour_Of_Election, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Start_Hour_Of_Election, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <h3>End Date Of Election</h3>
                        @Html.EditorFor(model => model.End_Date_Of_Election, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.End_Date_Of_Election, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <h3>End Hour Of Election</h3>
                        @Html.EditorFor(model => model.End_Hour_Of_Election, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.End_Hour_Of_Election, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <!-- Save Button -->
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        }

        <!-- Back to List Link -->
        <div class="back-link">
            @Html.ActionLink("Back to List", "DateSet", null, new { @class = "btn btn-secondary" })
        </div>
    </div>
</body>
</html>
