


@model IEnumerable<E_voting_System.Models.Debate>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<head>
    <style>
        body {
            background-color: #f8f9fa;
        }

        h3 {
            color: #007bff;
            margin-bottom: 20px;
        }

        .table {
            background-color: #ffffff;
            border: 1px solid #dee2e6;
            border-radius: 0.25rem;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
        }

            .table th {
                background-color: blue;
                color: #ffffff;
                text-align: center;
            }

            .table td {
                text-align: center;
            }

        .btn-primary {
            background-color: blue;
            border-color: blue;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #004085;
            }

        .btn-success {
            background-color: green;
            border-color: green;
        }

            .btn-success:hover {
                background-color: #004d00;
                border-color: #003d00;
            }

        .btn-danger {
            background-color: red;
            border-color: red;
        }

            .btn-danger:hover {
                background-color: #cc0000;
                border-color: #b30000;
            }
    </style>
</head>

<body>
    <div class="container">
        <h3 class="text-center my-4">موعد المناظرات</h3>

        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>تاريخ المناظرة</th>
                    <th>عنوان المناظرة </th>
                    <th>المرشح الأول </th>
                    <th>رقم قائمة المرشح الأول</th>
                    <th>المرشح الثاني</th>
                    <th>رقم قائمة المرشح الثاني</th>
                    <th>الحالة</th>
                    <th>Zoom رابط</th>
                    <th>الإجرائات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Date_Of_Debate)</td>
                        <td>@Html.DisplayFor(modelItem => item.Topic)</td>
                        <td>@Html.DisplayFor(modelItem => item.First_Candidate)</td>
                        <td>@Html.DisplayFor(modelItem => item.First_Candidate_List)</td>
                        <td>@Html.DisplayFor(modelItem => item.Second_Candidate)</td>
                        <td>@Html.DisplayFor(modelItem => item.Second_Candidate_List)</td>
                        <td>@Html.DisplayFor(modelItem => item.Status)</td>
                        <td>@Html.DisplayFor(modelItem => item.Zoom_link)</td>
                        <td>
                            @if (item.Status != "Approved" && item.Status != "Rejected")
                            {
                                using (Html.BeginForm("Approve", "Debates", FormMethod.Post, new { @class = "d-inline" }))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.Hidden("id", item.ID)
                                    <button type="submit" class="btn btn-success btn-sm">Approve</button>
                                }

                                using (Html.BeginForm("Reject", "Debates", FormMethod.Post, new { @class = "d-inline" }))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.Hidden("id", item.ID)
                                    <button type="submit" class="btn btn-danger btn-sm">Reject</button>
                                }
                            }
                            <a href="@Url.Action("Edit", "Debates", new { id = item.ID })" class="btn btn-primary btn-sm">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>


        </table>
    </div>
</body>
