

@model E_voting_System.Models.Debate

@{
    ViewBag.Title = "Edit Debate";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

}

<h2 style="text-align:center;">تعديل الطلب</h2>

<style>
    .form-container {
        width: 40%;
        margin: 0 auto; /* Center the form horizontally */
        background-color: whitesmoke;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        display: flex;
        flex-direction: column;
        align-content: space-around;
        align-items: center;
    }

    .col-md-offset-2.col-md-10 {
        display: flex;
        gap: 8px;
    }
</style>

<div class="form-container" style="direction:rtl;">
    @using (Html.BeginForm("Edit", "Debates", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            تاريخ المناظرة
            <div class="col-md-10">
                @Html.EditorFor(model => model.Date_Of_Debate)
                @Html.ValidationMessageFor(model => model.Date_Of_Debate)
            </div>
        </div>

        <div class="form-group">
            عنوان المناظرة
            <div class="col-md-10">
                @Html.EditorFor(model => model.Topic)
                @Html.ValidationMessageFor(model => model.Topic)
            </div>
        </div>

        <div class="form-group">
            رابط Zoom
            <div class="col-md-10">
                @Html.EditorFor(model => model.Zoom_link)
                @Html.ValidationMessageFor(model => model.Zoom_link)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="حفظ" class="btn btn-primary" />
                <button type="button" class="btn btn-danger" id="deleteButton" color: black;">حذف</button>
            </div>
        </div>
    }
</div>


@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.getElementById('deleteButton').addEventListener('click', function (event) {
            event.preventDefault(); // Prevent the default form submission

            Swal.fire({
                title: 'Are you sure?',
                text: "This action cannot be undone!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    // If confirmed, submit the form to delete the item
                    var form = document.createElement('form');
                    form.method = 'post';
                    form.action = '@Url.Action("DeleteConfirmed", "Debates")';
                    var inputId = document.createElement('input');
                    inputId.type = 'hidden';
                    inputId.name = 'id';
                    inputId.value = '@Model.ID'; // Set the ID of the debate to delete
                    form.appendChild(inputId);

                    var token = document.createElement('input');
                    token.type = 'hidden';
                    token.name = '__RequestVerificationToken';
                    token.value = $('input[name="__RequestVerificationToken"]').val();
                    form.appendChild(token);

                    document.body.appendChild(form);
                    form.submit();
                }
            });
        });
    </script>
}

