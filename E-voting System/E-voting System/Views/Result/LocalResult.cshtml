@model List<E_voting_System.Models.CircleViewModel>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Local Voting Results</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>
        h1 {
            color: #333;
        }

        h2 {
            color: #444;
            border-bottom: 2px solid #007bff;
            padding-bottom: 10px;
            margin-bottom: 20px;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            overflow: hidden; /* Ensure no overflow from cards */
        }

        .card {
            border: 1px solid #ddd;
            border-radius: 5px;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
            background-color: #fff;
            margin: 10px;
            padding: 15px;
            width: calc(33% - 20px); /* Three cards per row */
            float: left;
            box-sizing: border-box;
            min-height: 200px; /* Ensure cards have enough height */
        }

            .card h3 {
                margin-top: 0;
                font-size: 18px;
                color: #007bff;
            }

            .card p {
                margin: 5px 0;
            }

            .card ul {
                list-style-type: none;
                padding: 0;
            }

                .card ul li {
                    padding: 5px 0;
                    border-bottom: 1px solid #ddd;
                }

                    .card ul li:last-child {
                        border-bottom: none;
                    }

            .card .list-group {
                margin-top: 10px;
            }

            .card .list-group-item {
                border: none;
                padding: 5px 0;
            }

        .clear {
            clear: both;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Local Voting Results</h1>

        <div class="clear">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="card">
                    <h3>Circle @(i + 1)</h3>
                    <p><strong>Local Votes:</strong> @Model[i].localvotecounter</p>
                    <p><strong>White Votes:</strong> @Model[i].whitelocalcounter</p>
                    <p><strong>Total Votes:</strong> @Model[i].totalVotes</p>
                    <p><strong>Threshold:</strong> @Model[i].threshold</p>

                    <h4>Winning Lists</h4>
                    @if (Model[i].winning_lists.Any())
                    {
                        <ul>
                            @foreach (var list in Model[i].winning_lists.Where(l => l.ActualSeats > 0))
                            {
                                <li><strong>@list.list_Name - @list.Counter (Seats: @list.ActualSeats)</strong></li>
                                if (Model[i].winningCandidates.ContainsKey(list.ID))
                                {
                                    <ul class="list-group">
                                        @foreach (var candidate in Model[i].winningCandidates[list.ID])
                                        {
                                            <li class="list-group-item">@candidate.Candidate_Name - @candidate.Counter</li>
                                        }
                                    </ul>
                                }
                            }
                        </ul>
                    }
                    else
                    {
                        <p>No winning lists</p>
                    }
                </div>
            }
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
